{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": [ "ES2022", "dom" ],
    "outDir": "wwwroot/js/dist"
  },
  "include": [
    "Scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
